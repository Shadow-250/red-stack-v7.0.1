{
    "opts": {
        "template": "./node_modules/jsdoc-nr-template",
        "destination": "./docs",
        "recurse": true
    },
    "tags": {
        "allowUnknownTags": false,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "_include": [
            "./packages/node_modules/@red-stack/runtime/lib/api"
        ]
    },
    "templates": {
        "systemName": "RED-Stack Runtime API",
        "footer": "",
        "copyright": "Released under the Apache License v2.0",
        "default": {
            "outputSourceFiles": false
        }
    },
    "plugins": ["plugins/markdown"]
}
